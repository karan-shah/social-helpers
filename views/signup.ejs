<!doctype html>

<html lang="en-us">

<head>
  <meta charset="utf-8">
  <title>Sign Up- Social Helpers</title>

  <!-- Font-Awesome css -->
  <link rel="stylesheet" href="/assets/css/all.css">

  <!-- Bootstrap -->
  <link rel="stylesheet" type="text/css" href="/assets/bootstrap-4.4.1-dist/css/bootstrap.min.css">

  <link rel="stylesheet" type="text/css" href="/assets/styles/styles.css">
</head>

<body>
  <!-- Header -->
  <%- include('partials/header.ejs', {title: 'signup' , isUserLoggedIn: isUserLoggedIn}) %>

    <!-- General Site Navigation -->
    <%- include('partials/navigation.ejs', {title: 'signup' , currentUser: currentUser, isUserLoggedIn: isUserLoggedIn})
      %>

      <!-- Main Content  -->
      <div class="my-4 mx-auto box main-content-container login-container">
        <div class="text-center">
          <h2>Sign Up</h2>
        </div>
        <form method="POST" action="/user/signup">
          <div class="mt-4">
            <% if(errors && errors.length) { %>

              <% if(errors.filter(error=> error.param === 'firstName').length > 0) { %>
                <div class="form-group row">
                  <label class="col-2 col-form-label" for="firstName">First Name</label>
                  <div class="col-10">
                    <input id="firstName" class="form-control is-invalid" type="text" name="firstName"
                      value='<%= values.firstName %>'>
                    <% errors.filter(error=> error.param === 'firstName').forEach(error => { %>
                      <div class="invalid-feedback">
                        <%= error.msg %>
                      </div>
                      <% }) %>
                  </div>
                </div>
                <% } else { %>
                  <div class="form-group row">
                    <label class="col-2 col-form-label" for="firstName">First Name</label>
                    <div class="col-10">
                      <input id='firstName' class="form-control" type="text" name="firstName"
                        value='<%= values.firstName %>'>
                    </div>
                  </div>
                  <% } %>

                    <% if(errors.filter(error=> error.param === 'lastName').length > 0) { %>
                      <div class="form-group row">
                        <label class="col-2 col-form-label" for="lastName">First Name</label>
                        <div class="col-10">
                          <input id="lastName" class="form-control is-invalid" type="text" name="lastName"
                            value='<%= values.lastName %>'>
                          <% errors.filter(error=> error.param === 'lastName').forEach(error => { %>
                            <div class="invalid-feedback">
                              <%= error.msg %>
                            </div>
                            <% }) %>
                        </div>
                      </div>
                      <% } else { %>
                        <div class="form-group row">
                          <label class="col-2 col-form-label" for="lastName">Last Name</label>
                          <div class="col-10">
                            <input id='lastName' class="form-control" type="text" name="lastName"
                              value='<%= values.lastName %>'>
                          </div>
                        </div>
                        <% } %>

                          <% if(errors.filter(error=> error.param === 'email').length > 0) { %>
                            <div class="form-group row">
                              <label class="col-2 col-form-label" for="email">Email</label>
                              <div class="col-10">
                                <input id="email" class="form-control is-invalid" type="text" name="email"
                                  value='<%= values.email %>'>
                                <% errors.filter(error=> error.param === 'email').forEach(error => { %>
                                  <div class="invalid-feedback">
                                    <%= error.msg %>
                                  </div>
                                  <% }) %>
                              </div>
                            </div>
                            <% } else { %>
                              <div class="form-group row">
                                <label class="col-2 col-form-label" for="email">Email</label>
                                <div class="col-10">
                                  <input id='email' class="form-control" type="email" name="email"
                                    value='<%= values.email %>'>
                                </div>
                              </div>
                              <% } %>

                                <% if(errors.filter(error=> error.param === 'username').length > 0) { %>
                                  <div class="form-group row">
                                    <label class="col-2 col-form-label" for="username">Username</label>
                                    <div class="col-10">
                                      <input id="username" class="form-control is-invalid" type="text" name="username"
                                        value='<%= values.username %>'>
                                      <% errors.filter(error=> error.param === 'username').forEach(error => { %>
                                        <div class="invalid-feedback">
                                          <%= error.msg %>
                                        </div>
                                        <% }) %>
                                    </div>
                                  </div>
                                  <% } else { %>
                                    <div class="form-group row">
                                      <label class="col-2 col-form-label" for="username">Username</label>
                                      <div class="col-10">
                                        <input id="username" class="form-control" type="text" name="username"
                                          value='<%= values.username %>'>
                                      </div>
                                    </div>
                                    <% } %>
                                      <% if(errors.filter(error=> error.param === 'password').length > 0) { %>
                                        <div class="form-group row">
                                          <label class="col-2 col-form-label" for="password">Password</label>
                                          <div class="col-10">
                                            <input id='password' class="form-control is-invalid" type="password"
                                              name="password" value='<%= values.password %>'>
                                            <% errors.filter(error=> error.param === 'password').forEach(error => { %>
                                              <div class="invalid-feedback">
                                                <%= error.msg %>
                                              </div>
                                              <% }) %>
                                          </div>
                                        </div>
                                        <% } else { %>
                                          <div class="form-group row">
                                            <label class="col-2 col-form-label" for="password">Password</label>
                                            <div class="col-10">
                                              <input id=' password' class="form-control" type="password" name="password"
                                                value='<%= values.password %>'>
                                            </div>
                                          </div>
                                          <% } %>
                                            <% if(errors.filter(error=> error.param === 'other').length > 0) { %>
                                              <% errors.filter(error=> error.param === 'other').forEach(error => { %>
                                                <div class="mb-3 text-danger">
                                                  <%= error.msg %>
                                                </div>
                                                <% }) %>
                                                  <% } %>
                                                    <% } else { %>
                                                      <div class="form-group row">
                                                        <label class="col-2 col-form-label" for="firstName">First
                                                          Name</label>
                                                        <div class="col-10">
                                                          <input id='firstName' class="form-control" type="text"
                                                            name="firstName" value='<%= values.firstName %>'>
                                                        </div>
                                                      </div>
                                                      <div class="form-group row">
                                                        <label class="col-2 col-form-label" for="lastName">Last
                                                          Name</label>
                                                        <div class="col-10">
                                                          <input id='lastName' class="form-control" type="text"
                                                            name="lastName" value='<%= values.lastName %>'>
                                                        </div>
                                                      </div>
                                                      <div class="form-group row">
                                                        <label class="col-2 col-form-label" for="email">Email</label>
                                                        <div class="col-10">
                                                          <input id='email' class="form-control" type="email"
                                                            name="email" value='<%= values.email %>'>
                                                        </div>
                                                      </div>
                                                      <div class="form-group row">
                                                        <label class="col-2 col-form-label"
                                                          for="username">Username</label>
                                                        <div class="col-10">
                                                          <input id="username" class="form-control" type="text"
                                                            name="username" value='<%= values.username %>'>
                                                        </div>
                                                      </div>
                                                      <div class="form-group row">
                                                        <label class="col-2 col-form-label"
                                                          for="password">Password</label>
                                                        <div class="col-10">
                                                          <input id='password' class="form-control" type="password"
                                                            name="password" value='<%= values.password %>'>
                                                        </div>
                                                      </div>
                                                      <% } %>
                                                        <input class="btn btn-primary" type="submit" value="Sign Up">
          </div>
        </form>
      </div>

      <!-- Footer -->
      <%- include('partials/footer.ejs') %>

</body>

</html>