<!-- Header -->
<div class="header px-4 py-3">
    <a href="/" class="logo-container">
        <div class="d-flex flex-row align-items-center">
            <img src='/assets/images/Logo.png' class="logo" alt='Logo' />
            <h4 class="ml-3">Social Helpers</h4>
        </div>
    </a>
    <div class="header-right">
        <a href="/user/new-connection" class="mr-4">Start a New Connection</a>
        <% if(isUserLoggedIn) { %>
            <a href="/user/saved-connections" class="mr-4">My Connections</a>
            <a href="/user/logout" class="mr-4">Logout</a>
            <% } else { %>
                <a href="/user/login" class="mr-4">Login</a>
                <a href="/user/signup">Sign Up</a>
                <% } %>
    </div>
</div>